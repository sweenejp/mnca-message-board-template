<section class="postslist-grid">
	{% for post in postslist %}
		<article class="post-card" {% if post.url == url %} data-current="current item"{% endif %}>
			{% if post.data.featuredImage %}
				<a href="{{ post.url | url }}"><img class="post-card-image"src="{{ post.data.featuredImage }}" loading="lazy" alt=""></a>
			{% endif %}
			<div class="post-card-body">
				<a href="{{ post.url | url }}">
					<h3 class="post-card-title">
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							Untitled
						{% endif %}</h3>
					</a>
				<p class="post-card-data">
					<time datetime="{{ post.date | machineDate }}">
						<small>{{ post.date | readableDate }}</small>
					</time>
				</p>
				{% if post.data.summary %}
					<p class="post-card-summary">
						{{ post.data.summary }}
					</p>
				{% endif %}
				{% if post.data.tags %}
					<p class="post-card-tags">
						{% for tag in post.data.tags | sort %}
			  			{%- if tag != "post" and tag != "Important" and tag !="teacher" and tag !="Hide" -%}
			  			{% set tagUrl %}/tags/{{ tag }}/{% endset %}
			  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
			  			{%- endif -%}
						{% endfor %}
					</p>
			</div>
			{% endif %}
		</article>
	{% endfor %}
</section>
