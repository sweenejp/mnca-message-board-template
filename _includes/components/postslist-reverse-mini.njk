<section class="postslist-grid-reverse-mini">
	{% for post in postslist | reverse %}
        {% if "Important" in post.data.tags %}
        {% elseif "Hide" in post.data.tags %}
        {% else %}
		<article class="post-card post-card-mini" {% if post.url == url %} data-current="current item"{% endif %}>
			{% if post.data.featuredImage %}
				<a href="{{ post.url | url }}"><img class="post-card-image post-card-image-mini"src="{{ post.data.featuredImage }}" loading="lazy" alt=""></a>
			{% endif %}
			<div class="post-card-body post-card-body-mini">
				<h3 class="post-card-title">
					<a href="{{ post.url | url }}">
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							Untitled
						{% endif %}
					</a>
				</h3>
				<p class="post-card-data">
					<time datetime="{{ post.date | machineDate }}">
						<small>{{ post.date | readableDate }}</small>
					</time>
				</p>
				{% if post.data.summary %}
					<p class="post-card-summary">
						{{ post.data.summary }}
					</p>
				{% endif %}
				{% if post.data.tags %}
					<p class="post-card-tags">
						{% for tag in post.data.tags | sort %}
			  			{%- if tag != "post" and tag != "Important" and tag !="teacher" and tag !="Hide"-%}
			  			{% set tagUrl %}/tags/{{ tag }}/{% endset %}
			  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
			  			{%- endif -%}
						{% endfor %}
					</p>
			</div>
			{% endif %}
		</article>
        {% endif %}
	{% endfor %}
</section>
